@model Web.Models.SystemDetailsViewModel

@{
    ViewData["Title"] = "System details";
    Domain.Mapping.PluginDataModel? identityDataModel = Model.IdentityDataModel;
}

<dl class="row">
    <dt class="col-sm-2">Collector</dt>
    <dd class="col-sm-10">@Model.SystemConfiguration.CollectorName</dd>

    <dt class="col-sm-2">Provisioner</dt>
    <dd class="col-sm-10">@Model.SystemConfiguration.ProvisionerName</dd>

    <dt class="col-sm-2">Data</dt>
    <dd class="col-sm-10">@Model.SystemConfiguration.DataSelection</dd>

    <dt class="col-sm-2">Collector config</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrWhiteSpace(Model.SystemConfiguration.CollectorConnectionConfigurationJson))
        {
            <pre>@Model.SystemConfiguration.CollectorConnectionConfigurationJson</pre>
        }
        else
        {
            <span class="text-muted">(none)</span>
        }
    </dd>

    <dt class="col-sm-2">Provisioner config</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrWhiteSpace(Model.SystemConfiguration.ProvisionerConnectionConfigurationJson))
        {
            <pre>@Model.SystemConfiguration.ProvisionerConnectionConfigurationJson</pre>
        }
        else
        {
            <span class="text-muted">(none)</span>
        }
    </dd>
</dl>

@if (identityDataModel != null)
{
    <h3>Identity datamodel</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Source</th>
            <th>Type</th>
            <th>Direction</th>
            <th>Required</th>
            <th>Unique</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Domain.Mapping.DataModelField dataModelField in identityDataModel.Attributes)
        {
            <tr>
                <td>@dataModelField.Source</td>
                <td>@dataModelField.Type</td>
                <td>@dataModelField.Direction</td>
                <td>@dataModelField.Required</td>
                <td>@dataModelField.Unique</td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    @if (!string.IsNullOrWhiteSpace(Model.SystemConfiguration.CollectorName))
    {
        <a class="btn btn-primary" asp-controller="Ingestion" asp-action="Index">Run collector</a>
    }
    @if (!string.IsNullOrWhiteSpace(Model.SystemConfiguration.ProvisionerName))
    {
        <a class="btn btn-secondary" asp-controller="Provisioning" asp-action="Index">Run provisioner</a>
    }
</div>

<p class="mt-3">
    <a asp-controller="Systems" asp-action="Index">Back to list</a>
</p>